class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        nums=sorted(list(set(nums)))
        if len(nums)==0:
            return 0
        count_list=[]
        count=1
        for i in range(len(nums)-1):
            if nums[i+1]-nums[i]==1 or nums[i+1]-nums[i]==-1:
                count +=1
            else:
                count_list.append(count)
                count=1
            count_list.append(count)
        max=1
        for counts in count_list:
            if counts>max:
                max=counts
        return max

        
